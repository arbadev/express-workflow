//- ("#{hit.created_at}")
mixin table(hits,type)
	- var type = type || ""
	table(id='hitsTable' class='#{type}').table
		tbody
			each hit, i in hits
				tr
					td
						- var title = hit.story_title || hit.title
						a(href='https://naltatis.github.io/jade-syntax-docs/#mixin') #{title}. - #{hit.author} -
					td
						- var url = hit.story_url || hit.url
						- var date = hit.created_at
						a(href=url) #{moment(date).calendar() }
					td
						-var id = hit._id
						+a-btn-danger(id)
							+icon('trash')
	
mixin table-striped(header,data)
	+table(header,data,"table-striped")

mixin table-bordered(header,data)
	+table(header,data,"table-bordered")

mixin table-hover(header,data)
	+table(header,data,"table-hover")

mixin table-condensed(header,data)
	+table(header,data,"table-condensed")
	
